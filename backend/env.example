# AIMS Readiness Backend - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=sqlite:///./aims.db
# For PostgreSQL: postgresql://user:password@localhost:5432/aims_db

# ===========================================
# ORGANIZATION & AUTHENTICATION
# ===========================================
ORG_NAME=On-Chain Labs Governance
ORG_API_KEY=dev-aims-demo-key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_ORIGIN=http://localhost:3002
NEXT_PUBLIC_API_URL=http://127.0.0.1:8002

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=change_me
CORS_ORIGINS=http://localhost:3002,http://localhost:3001

# ===========================================
# STORAGE
# ===========================================
# For local development
EVIDENCE_LOCAL_STORAGE=true

# For production with S3/R2 (uncomment and configure)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_URL_EXP_MIN=60

# ===========================================
# FEATURES & LIMITS
# ===========================================
RATE_LIMIT=60
ENABLE_PDF_EXPORT=false
FEATURE_LLM_REFINE=false
TEMPLATES_DIR=assets/templates

# ===========================================
# DEVELOPMENT
# ===========================================
DEBUG=true
LOG_LEVEL=INFO
