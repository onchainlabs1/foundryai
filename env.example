# AIMS Readiness - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=sqlite:///./aims.db
# For PostgreSQL: postgresql://user:password@localhost:5432/aims_db

# ===========================================
# ORGANIZATION & AUTHENTICATION
# ===========================================
ORG_NAME=Your Organization Name
ORG_API_KEY=your-secure-api-key-here

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_ORIGIN=http://localhost:3001
NEXT_PUBLIC_API_URL=http://127.0.0.1:8001

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ===========================================
# STORAGE (OPTIONAL)
# ===========================================
# For local development, set to true
EVIDENCE_LOCAL_STORAGE=true

# For production with S3/R2
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_URL_EXP_MIN=60

# ===========================================
# FEATURES & LIMITS
# ===========================================
RATE_LIMIT=60
ENABLE_PDF_EXPORT=false
FEATURE_LLM_REFINE=false
TEMPLATES_DIR=assets/templates

# ===========================================
# DEVELOPMENT
# ===========================================
DEBUG=true
LOG_LEVEL=INFO
